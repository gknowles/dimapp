<Comments>
  <Copyright>
    <Owner>Glen Knowles</Owner>
    <Format>Copyright {Owner} {Years}.</Format>
    <Prefix value="# ">
      <File value="CMakeLists.txt"/>
      <File value="*.yaml"/>
      <File value="*.yml"/>
    </Prefix>
    <Prefix value="">
      <File value="*.adoc"/>
      <File value="*.md"/>
      <File value="*.natvis"/> <!-- xml -->
      <File value="*.xml"/>
      <File value="*.xml.sample"/>
      <File value="*.xsd"/>
    </Prefix>
    <Prefix value="// ">
      <File value="*.cpp"/>
      <File value="*.h"/>
    </Prefix>
    <Prefix value="; ">
      <File value="*.abnf"/>
    </Prefix>
    <Prefix value=":: ">
      <File value="*.bat"/>
    </Prefix>
  </Copyright>
</Comments>
